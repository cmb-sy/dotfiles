{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "MISE_YES": "1",
    "DIRENV_LOG_FORMAT": "",
    "NO_COLOR": "0"
  },
  "autoUpdater": true,
  "theme": "dark",
  "language": "japanese",
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(wc:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(bun:*)",
      "Bash(go:*)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(uv:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(kubectl:*)",
      "Bash(terraform:*)",
      "Bash(aws:*)",
      "Bash(gcloud:*)",
      "Bash(make:*)",
      "Bash(jq:*)",
      "Bash(curl:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(cursor:*)",
      "Bash(code:*)"
    ],
    "deny": [
      "Bash(vim:*)",
      "Bash(nano:*)",
      "Bash(less:*)",
      "Bash(man:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(sops:*)",
      "Bash(op:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(init:*)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "skipDangerousModePermissionPrompt": true,
  "ignorePatterns": [
    "**/node_modules/**",
    "**/.git/**",
    "**/.DS_Store",
    "**/dist/**",
    "**/build/**",
    "**/*.lock",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/pnpm-lock.yaml",
    "**/*.pyc",
    "**/__pycache__/**",
    "**/.env*",
    "**/coverage/**"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -qE '(rm\\s+-rf\\s+(/|~|\\$HOME|/usr|/etc)|mkfs|dd\\s+if=)'; then echo 'âŒ BLOCKED: Destructive command detected.' >&2; exit 1; fi"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude has finished the task.\" with title \"Claude Code\" '; printf '\\a'"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Approval required.\" with title \"Claude Code\"'; printf '\\a'"
          }
        ]
      }
    ]
  },
  "preferredEditor": "code",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    },
    "obsidian": {
      "command": "npx",
      "args": ["-y", "obsidian-mcp-server"],
      "env": {
        "OBSIDIAN_BASE_URL": "https://127.0.0.1:27124",
        "OBSIDIAN_VERIFY_SSL": "false"
      }
    }
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true,
    "postgres-best-practices@supabase-agent-skills": true,
    "compound-engineering@every-marketplace": true,
    "database-design@claude-code-workflows": true,
    "security-guidance@claude-plugins-official": true,
    "ast-grep@ast-grep-marketplace": true,
    "quantitative-trading@claude-code-workflows": true,
    "claude-md-management@claude-plugins-official": true
  }
}
